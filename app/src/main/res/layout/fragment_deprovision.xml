<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_deprovision_progress_bar_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/login_plate">
        <ProgressBar
            android:id="@+id/fragment_deprovision_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_deprovision_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/deprovision_prompt" />

    <View
        android:layout_below="@id/fragment_deprovision_prompt"
        android:id="@+id/fragment_deprovision_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <GridView
        android:layout_below="@id/fragment_deprovision_separator"
        android:id="@+id/fragment_deprovision_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </GridView>

</RelativeLayout>