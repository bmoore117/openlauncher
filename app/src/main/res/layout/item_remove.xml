<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/item_remove_imageview"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8sp"
        android:src="@mipmap/ic_launcher_2" />

    <TextView
        android:id="@+id/item_remove_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:layout_toEndOf="@id/item_remove_imageview" />

    <Button
        android:id="@+id/item_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_padding_side"
        android:text="@string/remove" />

</RelativeLayout>
